<style>

</style>
<div class="pusher">
	<div class="ui vertical inverted segment" style="padding:4em 0;">
		<div class="ui text container">
	      <h1 class="ui inverted header">
	         What's up ! <%= user.username %>
	      </h1>	  
	    </div>
	</div>
	
	<div class="ui vertical stripe segment" style="margin-top:2em;">
	    <div class="ui middle container">
	    	<h3>Your public history: </h3>
		  	<div class="ui link cards">

		  		<% comments.forEach(function(post, index){ %>
		  		<div class="card">
		  			<div class="content">
		  				<div class="header"><%= post.title %></div>
		  				<div class="description"><%= post.content %></div>
		  			</div>
		  			<div class="extra content">
						<% 
							var time = new Date(post.time);
							var formated = time.getFullYear() + '-' + parseInt(time.getMonth()+1) + '-' + 
							time.getDate() + '  ' + time.getHours() + ':' + time.getMinutes() + ':' +
							time.getSeconds();
						%>

		  				<span class="right floated"><%= formated %></span>
		  				<span><%= post.username %></span>
		  			</div>
		  		</div>

		  		<% }) %>
		  	</div>
		</div>
  	</div>
</div>

